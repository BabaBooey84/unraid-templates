<?xml version="1.0"?>
<Container version="2">
  <Name>Koffan</Name>
  <Repository>ghcr.io/pansalut/koffan:latest</Repository>
  <Registry/>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/PanSalut/Koffan/issues</Support>
  <Project>https://github.com/PanSalut/Koffan</Project>
  <ReadMe/>
  <Overview>Koffan is a lightweight, self-hosted shopping list app designed for families and couples.&#13;
&#13;
Features:&#13;
- Real-time sync (WebSockets)&#13;
- Offline-first / PWA support&#13;
- Minimal resource usage&#13;
- Simple password-based auth&#13;
&#13;
Change APP_PASSWORD on first install.&#13;
  </Overview>
  <Category>Productivity</Category>
  <WebUI>http://[IP]:[PORT:3011]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/PanSalut/Koffan/72563f8d64f4995b9749eafa3b12fbdf848bf862/static/icon-192.png</Icon>
  <ExtraParams>--restart unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1768432373</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="WebUI Port" Target="80" Default="3000" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="{8}">3000</Config>
  <Config Name="AppData Directory" Target="/data" Default="/mnt/user/appdata/koffan" Mode="rw" Description="Persistent app data (SQLite database stored here)" Type="Path" Display="always" Required="true" Mask="{8}">/mnt/user/appdata/koffan</Config>
  <Config Name="Application Password" Target="APP_PASSWORD" Default="change-me" Mode="{3}" Description="Login password for Koffan (CHANGE THIS)" Type="Variable" Display="always" Required="true" Mask="true">change-me</Config>
  <Config Name="Application Environment" Target="APP_ENV" Default="development" Mode="{3}" Description="Set to 'production' when using HTTPS or reverse proxy" Type="Variable" Display="advanced" Required="false" Mask="{8}">development</Config>
  <Config Name="Disable Authentication" Target="DISABLE_AUTH" Default="false" Mode="{3}" Description="Disable login entirely (ONLY if proxy handles auth)" Type="Variable" Display="advanced" Required="false" Mask="{8}">false</Config>
  <Config Name="Database Path" Target="DB_PATH" Default="/data/shopping.db" Mode="{3}" Description="SQLite database file location" Type="Variable" Display="advanced" Required="false" Mask="{8}">/data/shopping.db</Config>
  <Config Name="Default Language" Target="DEFAULT_LANG" Default="en" Mode="{3}" Description="UI language (en, no, de, fr, es, pl, pt, uk, lt)" Type="Variable" Display="advanced" Required="false" Mask="{8}">en</Config>
  <Config Name="API Token" Target="API_TOKEN" Default="" Mode="{3}" Description="Optional REST API token (leave empty to disable)" Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <TailscaleStateDir/>
</Container>
